{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "globalUI/*": ["./src/common/globalUI/*"],
      "mock/*": ["./mock/*"],
      "@assets/*": ["./src/assets/*"], // alias  '@xxxx'
      "@common/*": ["./src/common/*"],
      "@components/*": ["./src/components/*"],
      "@containers/*": ["./src/containers/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@models/*": ["./src/models/*"],
      "@services/*": ["./src/services/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],
      "@setting/*": ["./src/setting/*"]
    },
    "allowJs": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules/**",
    "**/*.spec.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
